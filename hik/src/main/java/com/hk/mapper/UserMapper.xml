<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hk.mapper.UserMapper">
    <!-- 根据uid查询一个用户信息 -->
    <select id="selectUserById" parameterType="string"
        resultType="com.hk.pojo.MyUser">
        select * from user where uid = #{uid}
    </select>
    <!-- 查询所有用户信息 -->
    <select id="selectAllUser" resultType="myUser">
        select * from user
    </select>
    <!-- 添加一个用户，#{uname}为 com.mybatis.po.MyUser 的属性值 -->
    <insert id="addUser" parameterType="com.hk.pojo.MyUser">
        insert into user (uid,uname,uage,birth)
        values(#{uid},#{uname},#{uage},#{birth,jdbcType=DATE})
    </insert>
    <!--修改一个用户 -->
    <update id="updateUser" parameterType="com.hk.pojo.MyUser">
        update user set uname =
        #{uname},uage = #{uage} ,birth = #{birth,jdbcType=DATE} where uid = #{uid}
    </update>
    <!-- 删除一个用户 -->
    <delete id="deleteUser" parameterType="string">
        delete from user where uid
        = #{uid}
    </delete>
</mapper>